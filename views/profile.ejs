<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
    <section id="background">
        <div id="blob"></div>
        <div id="blur"></div>
    </section>

    <div class="heading">
        <h1>Zerothdev</h1>
    </div>

    <div class="profile">
        <div class="welcome">
            <h1>Welcome, <%= user.displayName %>!</h1>
            <h5><%= user.email || "No Display email available" %></h5>
        </div>
    </div>


    <h2>My ideas</h2>
    <div class="myIdea">
        <% if (user.ideas.length > 0) { %>
                <% user.ideas.forEach(idea => { %>
                        <div class="MyCard">
                            <h3><%= user.displayName %></h3>
                            <h6><%= idea.createdAt.toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' }) %></h6>
                            <h3><%= idea.title %></h2>
                            <p><%= idea.description %></p>
                        </div>
                <% }) %>
        <% } %>
    </div>
    
    <h2>My articles</h2>
    <div class="myArticle">
            <% if (user.posts.length > 0) { %>
                    <% user.posts.forEach(post => { %>
                            <div class="MyCard">
                                <h3><%= user.displayName %></h3>
                                <h6><%= post.createdAt.toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' }) %></h6>
                                <h3><%= post.title %></h3> 
                                <p><%= post.description %></p>
                            </div>
                    <% }) %>
            <% } %>
    </div>
</body>
</html>